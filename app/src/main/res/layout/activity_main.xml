<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    tools:context=".View.Activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circular_corners"
        android:elevation="5dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_image_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        android:src="@mipmap/logo_image"
        app:layout_constraintBottom_toTopOf="@+id/additional_info_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar_id" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/additional_info_btn_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:civ_border_color="#fff"

        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/entertainment_btn_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/automobile_btn_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/healthy_department_btn_id"
        android:background="@drawable/circle"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/others_btn_id"
        android:background="@drawable/circle"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shopping_btn_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/finances_btn_id"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        android:background="@drawable/circle"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/vacation_btn_id"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        android:background="@drawable/circle"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/food_facility_btn_id"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="10sp"
        android:background="@drawable/circle"
        app:layout_constraintCircle="@+id/logo_image_id"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="130dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/dotted_circle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>